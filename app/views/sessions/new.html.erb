<% provide(:title, "Ingresar") %>
<div id="reg_form" class="bg_form">
  <h1>Ingresar</h1>

  <div class="row">
    <div class="span6">
      <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email, :class => "label_form" %>
        <%= f.text_field :email, :class => "text_field_form" %>

        <%= f.label :password, :class => "label_form" %>
        <%= f.password_field :password, :class => "text_field_form" %>

        <%= f.submit "Iniciar sesion", class: "btn btn-primary btn_form" %>
      <% end %>
      <p>Â¿Usuario nuevo? <%= link_to "Registrate ahora!", signup_path %> o ingresa a travez de:</p>

      <%= button_to "Facebook", "/auth/facebook", class: "btn btn-primary" %>
    </div>
  </div>
</div>