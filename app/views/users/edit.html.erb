<div id="reg_form" class="bg_form">
	<h1>Editar Perfil</h1>

	<div class="row">
    <div class="span6">
    	<%= form_for(@user) do |f| %>
    		<%= render 'shared/error_messages' %>

				<%= f.label :nombre, :class => "label_form" %>
		    <%= f.text_field :name, :class => "text_field_form"  %>

		    <%= f.label :usuario, :class => "label_form" %>
		    <%= f.text_field :nickname, :class => "text_field_form"  %>

		    <%= f.label :email, :class => "label_form" %>
		    <%= f.text_field :email, :class => "text_field_form"  %>

		    <%= f.label :telefono, :class => "label_form" %>
		    <%= f.text_field :phone, :class => "text_field_form"  %>

		    <%= f.label :fecha_de_cumpleaÃ±os, :class => "label_form" %>
		    <%= f.datepicker :birthday, :class => "text_field_form"  %>

		    <%= f.label :sexo, :class => "label_form" %>
		    <%= f.select :gender, options_for_select(%w[Hombre Mujer]), options ={}, :class => "select_form"%>

		    <%= f.label :ciudad, :class => "label_form" %>
		    <% if (@user.city.nil?) %>
		    <%= f.collection_select :city, City.all, :id, :name, {:include_blank => 'Seleccione una ciudad'},:class => "select_form" %>
		    <% else %>
		    <%= f.collection_select :city, City.all, :id, :name, {:selected => @user.city.id},:class => "select_form" %>
		    <% end %>

		    <%= f.label :password, :class => "label_form" %>
        <%= f.password_field :password, :class => "text_field_form" %>

        <%= f.label :password_confirmation, "Confirmar password", :class => "label_form" %>
        <%= f.password_field :password_confirmation, :class => "text_field_form" %>

		    <%= f.submit "Guardar", class: "btn btn-primary btn_form"%>
		  <% end %>
		  <hr>
			<%= link_to 'Regresar', @user %>
		</div>
  </div>
</div>