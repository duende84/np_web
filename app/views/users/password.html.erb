<div id="reg_form" class="bg_form">
	<h1>Cambiar contraseña</h1>

	<div class="row">
    <div class="span6">
    	<%= form_for @user, :url => { :action => "update_password" } do |f| %>
    		<%= render 'error_messages' %>

		    <%= f.label :password, "Nueva contraseña", :class => "label_form" %>
        <%= f.password_field :password, :class => "text_field_form" %>

        <%= f.label :password_confirmation, "Confirmar contraseña", :class => "label_form" %>
        <%= f.password_field :password_confirmation, :class => "text_field_form" %>

		    <%= f.submit "Guardar", class: "btn btn-primary btn_form"%>
		  <% end %>
		  <hr>
			<%= link_to 'Regresar', @user %>
		</div>
  </div>
</div>